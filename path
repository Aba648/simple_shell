#include "shell.h"

/**
 * path_cmd -  Search In $PATH Excutable Command
 * cmd: Parsed Input
 * Return: NULL.
 */
char *getpath(char *command)
{
int i;
char *path , *cmd , *var ;
struct stat am;
for(i=0 ; command[i] ; i++)
{
if (command[i]=='/')
{
if(stat(command ,  &am)==0)
return(_strdup(command));
else
return(NULL);
}
}
path=getenv("path")
if (!path)
return(NULL);
var=strtok(path , ":")
while(var)
{
cmd=malloc(_strlen(var)+ _strlen(command) +2);
if(cmd)
{
_strcpy(cmd , var);
_strcat(cmd , "/");
_strcat(cmd , command);
if (stat(cmd , &am)==0)
{
free(path);
return(cmd);
} free(cmd) , cmd=NULL;
var=strtok(null , ":");}
}
